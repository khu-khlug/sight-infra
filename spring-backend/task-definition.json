{
  "family": "sight-spring-backend",
  "networkMode": "bridge",
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::430044730206:role/ecs-service-parameter-reader-role",
  "containerDefinitions": [
    {
      "name": "sight-spring-backend",
      "image": "ghcr.io/khu-khlug/sight-spring-backend:sha-e0b73c96f9a6af7f4e2a0efece0ec792415d114f",
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "portMappings": [
        { "containerPort": 8080, "hostPort": 0, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "AUTH_SERVICE_ENDPOINT", "value": "https://khlug.org" },

        { "name": "MYSQL_PORT", "value": "3306" },
        { "name": "MYSQL_DATABASE", "value": "sight" }
      ],
      "secrets": [
        {
          "name": "AUTH_SERVICE_API_KEY",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:430044730206:parameter/app/spring/internal-api-key"
        },

        {
          "name": "MYSQL_HOST",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:430044730206:parameter/app/spring/mysql-host"
        },
        {
          "name": "MYSQL_USER",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:430044730206:parameter/app/spring/mysql-user"
        },
        {
          "name": "MYSQL_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:430044730206:parameter/app/spring/mysql-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sight-spring-backend",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
